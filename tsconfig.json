{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "outDir": "lib",
    "paths": {
      "@/*": ["src/*"],
      "~@/*": ["src/*"]
    },

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,

    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["node"],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
